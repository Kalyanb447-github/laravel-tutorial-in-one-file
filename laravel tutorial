              Name : {{$message->name}}
          </li>
          <li class="list-group-item">
                Email : {{$message->email}}
          </li>
            <li class="list-group-item">
                 Message : {{$message->messages}}
            </li>
      </ul>
      <br>

  @endforeach
 @endif
@endsection

    /**
     * Reverse the migrations.
     *
     * @return void
     */

         //call down() delete table  
    public function down()
    {
        Schema::dropIfExists('masseges');
    }
